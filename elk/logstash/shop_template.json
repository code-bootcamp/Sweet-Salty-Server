{
  "template": "shop-*",
  "index_patterns": ["shop"],
  "order": "1",
  "settings": {
    "refresh_interval": "5s",
    "analysis": {
      "analyzer": {
        "custom_analyzer": {
          "tokenizer": "custom_gram"
        }
      },
      "tokenizer": {
        "custom_gram": {
          "type": "nGram",
          "min_gram": "1",
          "max_gram": "10"
        }
      }
    },
    "max_ngram_diff": "20"
  },
  "mappings": {
    "properties": {
      "shopproductname": {
        "type": "text",
        "analyzer": "custom_analyzer",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "shopseller": {
        "type": "custom_analyzer",
        "analyzer": "custom_analyzer",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "shopdiscount": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "shopdiscountprice": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "shoporiginalprice": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "shopdescription": { "type": "keyword" },
      "shopstock": { "type": "keyword" },
      "thumbnail": { "type": "keyword" },
      "createat": { "type": "Date" },
      "updateat": { "type": "Date" },
      "deleteat": { "type": "Date" }
    }
  }
}
