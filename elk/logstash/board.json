{
  "template": "board",
  "index_patterns": ["*"],
  "order": "1",
  "settings": {
    "refresh_interval": "5s",

    "analysis": {
      "analyzer": {
        "my_ngram_analyzer": {
          "filter": ["my_stopwords"],
          "tokenizer": "my_ngram_tokenizer"
        }
      },
      "tokenizer": {
        "my_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "1",
          "max_gram": "10"
        }
      }
    },
    "max_ngram_diff": "20"
  },
  "mappings": {
    "properties": {
      "boardtitle": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "boardsugar": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "boardsalt": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "boardcontents": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "boardwriter": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "agegroup": { "type": "keyword" },
      "gender": { "type": "keyword" },
      "createat": { "type": "date" },
      "boardlikecount": { "type": "short" },
      "boardhit": { "type": "long" },
      "mood": { "type": "text" },
      "menu": { "type": "text" },
      "region": { "type": "text" }
    }
  }
}
